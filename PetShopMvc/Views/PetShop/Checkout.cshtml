@model PetShop.BLL.Cart
@{
    Layout = null;
}

<HTML>
<HEAD>
    <title>Checkout</title>
    <META http-equiv="Content-Type" content="text/html; charset=windows-1252">
    <link rel="stylesheet" href="~/Styles.css">
</HEAD>
<body>
    @Html.Partial("NavBar")
    <blockquote>
        <span class="title">Shopping Cart</span><p>
            <table cellpadding="0" cellspacing="0">
                <tr class="gridHead">
                    <td>Item ID</td>
                    <td>Product</td>
                    <td>In Stock</td>
                    <td>Price</td>
                    <td>Quantity</td>
                    <td>Subtotal</td>
                </tr>
            @foreach (var item in Model.GetCartItems())
            {
                <tr class="gridItem">
                    <td>@item.ItemId</td>
                    <td><a href='ItemDetails?itemId=@item.ItemId'>@item.Name</a></td>
                    <td>@item.InStock</td>
                    <td class="num">@item.Price</td>
                    <td class="num">@item.Quantity</td>
                    <td class="num">@item.Subtotal</td>
                </tr>

            }
            <tr class="gridFoot">
                <td class="num" colspan="6"><span class="label">Total:</span>@Model.Total</td>
            </tr>
            </table>
        <p><a id="link" runat="server" href="~/PetShop/OrderBilling"><img src="~/Images/buttonContinue.gif" alt="Continue" border="0"></a></p>
    </blockquote>
</body>
</HTML>