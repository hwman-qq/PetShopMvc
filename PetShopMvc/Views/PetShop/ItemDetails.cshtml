@model PetShop.Model.ItemInfo
@{
    Layout = null;
}

<HTML>
<HEAD>
    <title>Item Details</title>
    <meta name="vs_targetSchema" content="http://schemas.microsoft.com/intellisense/ie5">
    <link rel="stylesheet" href="~/Styles.css">
</HEAD>
<body>
    @Html.Partial("NavBar")
    <blockquote>
        <asp:label id="lblSearchResults" runat="server" />
        <p></p>
        <table cellpadding="0" cellspacing="0">
            <tr valign="top">
                <td class="desc" width="130"><asp:label id="lblDescription" runat="server" /></td>
                <td>
                    <span class="title">
                        @Model.Name
                        @Model.ProductName
                    </span>
                    <p>
                        <table cellpadding="1" cellspacing="0">
                            <tr>
                                <td class="label">Price:</td>
                                <td>@Model.Price</td>
                            </tr>
                            <tr>
                                <td class="label">Quantity:</td>
                                <td>@Model.Quantity</td>
                            </tr>
                        </table>
                    <p><a href='~/PetShop/ShoppingCart?itemId=@Model.Id'><img src="~/Images/buttonAdd.gif" alt="Add to Cart" border="0"></a></p>
                </td>
            </tr>
        </table>
    </blockquote>
</body>
</HTML>
