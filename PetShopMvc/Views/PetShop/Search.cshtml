@model IEnumerable<PetShop.Model.ProductInfo>

@{
    Layout = null;
}

<!DOCTYPE html>

<HTML>
<HEAD>
    <title>Search</title>
    <META http-equiv="Content-Type" content="text/html; charset=windows-1252">
    <link rel="stylesheet" href="~/Styles.css">
</HEAD>
<body>
    @Html.Partial("NavBar")<br>
    <blockquote>
        <span class="title">Search Results</span><p>
            <table cellpadding="0" cellspacing="0">
                <tr class="gridHead">
                    <td>Product ID</td>
                    <td>Name</td>
                    <td>Description</td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="gridItem">
                        <td>@item.Id</td>
                        <td><a href='Items?productId=@item.Id'>@item.Name</a></td>
                        <td>@item.Description</td>
                    </tr>
                }
                </tbody>
            </table>
       </p>
    </blockquote>
</body>
</HTML>
