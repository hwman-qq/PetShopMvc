@model PetShop.Model.AddressInfo

<table cellpadding="1" cellspacing="0">
    <tr>
        <td class="label" width="125">First Name:</td>
        <td>
            @Html.TextBoxFor(model => model.FirstName)
        </td>
    </tr>
    <tr>
        <td class="label">Last Name:</td>
        <td>
            @Html.TextBoxFor(model => model.LastName)
        </td>
    </tr>
    <tr>
        <td class="label">Street Address:</td>
        <td>
            @Html.TextBoxFor(model => model.Address1)
        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            @Html.TextBoxFor(model => model.Address2)
        </td>
    </tr>
    <tr>
        <td class="label">City:</td>
        <td>
            @Html.TextBoxFor(model => model.City)
        </td>
    </tr>
    <tr>
        <td class="label">State / Province:</td>
        <td>
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        @Html.DropDownListFor(model => model.State, new SelectList(
                       new List<SelectListItem>{
                           new SelectListItem { Text = "California" },
                           new SelectListItem { Text = "New York" },
                           new SelectListItem { Text = "Texas" }
                       }, "Text", "Text"))
                    </td>
                    <td class="label" width="100">Postal Code:</td>
                    <td>
                        @Html.TextBoxFor(model => model.Zip)
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td class="label">Country:</td>
        <td>
            @Html.DropDownListFor(model => model.Country, new SelectList(
          new List<SelectListItem>{
              new SelectListItem { Text = "USA" },
              new SelectListItem { Text = "Canada" },
              new SelectListItem { Text = "Japan" }
          }, "Text", "Text"))
        </td>
    </tr>
    <tr>
        <td class="label">Telephone Number:</td>
        <td>
            @Html.TextBoxFor(model => model.Phone)
        </td>
    </tr>
</table>
